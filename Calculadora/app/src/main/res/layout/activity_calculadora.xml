<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="0"
        android:textSize="75dp"
        app:layout_constraintBottom_toTopOf="@+id/Table3"

        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/Table3"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <Button
                android:id="@+id/botonAc"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/material_dynamic_tertiary60"
                android:padding="20dp"
                android:text="AC"

                android:textSize="45dp" />

            <Button
                android:id="@+id/botonCe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/material_dynamic_tertiary60"
                android:padding="20dp"
                android:text="CE"

                android:textSize="45dp" />

            <Button
                android:id="@+id/botonPlus"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/md_theme_onTertiaryFixedVariant"

                android:padding="20dp"
                android:text="+"

                android:textSize="45dp" />


        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.723">


        <TableRow>


            <Button
                android:id="@+id/button_7"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="7"


                android:textSize="45dp"


                />

            <Button
                android:id="@+id/button_8"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="8"

                android:textSize="45dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="100dp"

                android:layout_marginRight="5dp"
                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"

                android:text="9"
                android:textSize="45dp" />

            <Button
                android:id="@+id/buttonmenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_onTertiaryFixedVariant"
                android:padding="20dp"
                android:text="-"

                android:textSize="45dp" />
        </TableRow>


        <TableRow>


            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="4"
                android:textSize="45dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="5"
                android:textSize="45dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="6"

                android:textSize="45dp" />

            <Button
                android:id="@+id/button_dividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/md_theme_onTertiaryFixedVariant"
                android:padding="20dp"
                android:text="/"
                android:textSize="45dp" />
        </TableRow>


        <TableRow>


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="1"
                android:textSize="45dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="2"

                android:textSize="45dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="3"

                android:textSize="45dp" />

            <Button
                android:id="@+id/button_multiplicar"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/md_theme_onTertiaryFixedVariant"
                android:padding="20dp"
                android:text="*"

                android:textSize="45dp" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/Table2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow>

            <Button
                android:id="@+id/button_0"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="0"

                android:textSize="45dp" />

            <Button
                android:id="@+id/button_punto"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/md_theme_inversePrimary"
                android:padding="20dp"
                android:text="."

                android:textSize="45dp" />


            <Button
                android:id="@+id/button_igual"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/md_theme_onTertiaryFixedVariant"
                android:padding="20dp"
                android:text="="

                android:textSize="45dp" />


        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>